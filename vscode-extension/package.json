{
  "name": "sbt-dependencies",
  "displayName": "sbt-dependencies",
  "description": "Syntax highlighting for sbt-dependencies configuration files",
  "version": "0.6.1",
  "publisher": "alejandrohdezma",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/alejandrohdezma/sbt-dependencies"
  },
  "engines": {
    "vscode": "^1.75.0"
  },
  "main": "./dist/extension.js",
  "activationEvents": [
    "onLanguage:sbt-dependencies",
    "workspaceContains:**/*.sbt"
  ],
  "icon": "icon.png",
  "categories": ["Programming Languages"],
  "contributes": {
    "languages": [
      {
        "id": "sbt-dependencies",
        "filenames": ["dependencies.conf"],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "sbt-dependencies",
        "scopeName": "source.sbt-dependencies",
        "path": "./syntaxes/dependencies.tmLanguage.json"
      }
    ],
    "commands": [
      {
        "command": "sbt-dependencies.updateAllDependencies",
        "title": "Update All Dependencies",
        "category": "SBT Dependencies",
        "enablement": "resourceLangId == sbt-dependencies"
      },
      {
        "command": "sbt-dependencies.updateDependencies",
        "title": "Update Dependencies",
        "category": "SBT Dependencies",
        "enablement": "resourceLangId == sbt-dependencies"
      },
      {
        "command": "sbt-dependencies.installDependency",
        "title": "Install Dependency",
        "category": "SBT Dependencies",
        "enablement": "resourceLangId == sbt-dependencies"
      },
      {
        "command": "sbt-dependencies.openDependenciesGroup",
        "title": "View Dependencies Group",
        "category": "SBT Dependencies"
      },
      {
        "command": "sbt-dependencies.openBuildProject",
        "title": "View Project Definition",
        "category": "SBT Dependencies"
      }
    ],
    "configurationDefaults": {
      "files.associations": {
        "dependencies.conf": "sbt-dependencies"
      },
      "[sbt-dependencies]": {
        "editor.fontLigatures": false
      }
    }
  },
  "scripts": {
    "compile": "tsc --noEmit",
    "build": "node esbuild.js",
    "watch": "node esbuild.js --watch",
    "prepackage": "npm run build -- --production",
    "package": "vsce package",
    "publish": "vsce publish",
    "test": "vitest run"
  },
  "devDependencies": {
    "@types/vscode": "^1.75.0",
    "@types/node": "^24.2.0",
    "@vscode/vsce": "^3.2.2",
    "esbuild": "^0.25.0",
    "typescript": "^5.7.0",
    "vitest": "^4.0.18",
    "vscode-tmgrammar-test": "^0.1.3"
  }
}
